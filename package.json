    "@react-navigation/native-stack": "^6.11.0",
    "@types/jest": "29.5.14",
    "@types/react": "~19.1.10",
    "babel-preset-expo": "~54.0.10",
    "expo": "~54.0.0",
    "expo-av": "~16.0.8",
